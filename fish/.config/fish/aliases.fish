# Alias commands to include common flags
alias nvim "nvim -p";
alias vim "vim -p"

alias rm "rm -i"
alias cp "cp -i"
alias mv "mv -i"
alias mkdir "mkdir -p"
alias du "du -hs"

# Abbreviate commonly used functions
# An abbreviation will expand after <space> or <Enter> is hit
abbr o open
abbr g git
abbr p python3
abbr ip ipython
abbr n nvim

abbr ga "git add"
abbr gb "git branch"
abbr gco "git checkout"
abbr gcl "git clone"
abbr gc "git commit"